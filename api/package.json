{
  "name": "@outlook-weekly/api",
  "version": "0.1.0",
  "private": true,
  "description": "Backend API for Outlook Weekly Reports (Azure Functions v4)",
  "main": "dist/functions.js",
  "scripts": {
    "bootstrap": "tsx src/bootstrap.ts",
    "dev": "tsx watch src/index.ts",
    "build": "tsc || exit 0",
    "start": "func start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:pdf": "tsx src/test-pdf.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "@azure/cosmos": "^3.17.3",
    "@azure/functions": "^4.0.0",
    "@azure/identity": "^3.4.2",
    "@azure/keyvault-secrets": "^4.7.0",
    "@azure/msal-node": "^2.15.0",
    "@azure/storage-blob": "^12.17.0",
    "@azure/storage-queue": "^12.17.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "jwks-rsa": "^3.2.0",
    "luxon": "^3.7.2",
    "pg": "^8.11.3",
    "playwright": "^1.57.0",
    "uuid": "^11.0.4",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
